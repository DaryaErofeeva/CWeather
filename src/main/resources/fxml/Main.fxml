<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<StackPane fx:id="root" minWidth="320.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/8.0.121"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ero.cweather.controllers.MainController">
    <children>
        <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER">
            <padding>
                <Insets bottom="55.0"/>
            </padding>
            <content>
                <FlowPane fx:id="flowPane" vgap="10" hgap="10">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </FlowPane>
            </content>
        </ScrollPane>
        <AnchorPane maxHeight="50.0" minHeight="50.0" prefHeight="50.0" StackPane.alignment="BOTTOM_CENTER">
            <children>
                <JFXCheckBox fx:id="chckbxFinished" alignment="BOTTOM_LEFT" layoutX="10.0" layoutY="15.0"
                             onAction="#onFinishedChecked" text="Скрыть завершенные" AnchorPane.bottomAnchor="20.0"
                             AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="20.0"
                             StackPane.alignment="BOTTOM_LEFT">
                    <StackPane.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </StackPane.margin>
                    <font>
                        <Font name="Ayuthaya" size="14.0"/>
                    </font>
                </JFXCheckBox>
                <JFXButton fx:id="addTask" layoutX="240.0" onAction="#onAddButtonActionListener" text="+"
                           AnchorPane.bottomAnchor="7.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="0.0"
                           StackPane.alignment="BOTTOM_RIGHT">
                    <font>
                        <Font name="Ayuthaya" size="20.0"/>
                    </font>
                    <StackPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </StackPane.margin>
                </JFXButton>
            </children>
            <StackPane.margin>
                <Insets bottom="1.0" left="1.0" right="20.0" top="1.0"/>
            </StackPane.margin>
        </AnchorPane>
    </children>
</StackPane>
